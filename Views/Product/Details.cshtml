            };
            $.ajax({
                type: "POST", // or "GET" depending on your server-side handling
                url: "/Product/Edit",
                data: data,
                success: function (response) { 
                   window.location.reload();
                },
                error: function (error) {
                    // Handle any errors that occur during the AJAX request
                    window.location.reload();
                }
            });
        });
    });
</script>
