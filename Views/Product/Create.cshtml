@model CheckApiWeb.Models.Item
@{
    Layout = "_Layout_admin";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Tạo mới sản phẩm</h3>
            <div class="tile-body">
                <form class="row" action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group col-md-3">
                        <label class="control-label">Tên sản phẩm</label>
                        <input class="form-control" type="text" asp-for="Tensp">
                        <span asp-validation-for="Tensp" class="text-danger"></span>
                    </div>
                  @*  <div class="form-group col-md-3 ">
                        <label for="exampleSelect1" class="control-label">Tình trạng</label>
                        <select class="form-control" id="exampleSelect1" asp-for="Status">
                            <option>-- Chọn tình trạng --</option>
                            <option>Còn hàng</option>
                            <option>Hết hàng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>*@
                    <div class="form-group col-md-3">
                        <label for="exampleSelect1" class="control-label">Đơn vị tính</label>
                        <select class="form-control" id="exampleSelect1" asp-for="Dvt">
                            <option>-- Chọn DVT --</option>
                            <option>Đĩa</option>
                            <option>Cái</option>
                            <option>Bát</option>
                            <option>Túi</option>
                        </select>
                        <span asp-validation-for="Dvt" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label">Giá bán</label>
                        <input class="form-control" type="text" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    @*<div class="form-group col-md-3">
                        <label class="control-label">Discount</label>
                        <input class="form-control" type="text" asp-for="discount">
                        <span asp-validation-for="discount" class="text-danger"></span>
                    </div>*@
                    <div class="form-group col-md-12">
                        <label class="control-label">Ảnh sản phẩm</label>
                        <div id="myfileupload">
                            <input type="file" id="uploadfile" name="file" onchange="readURL(this);" />
                        </div>
                        <div id="thumbbox">
                            <img height="450" width="400" alt="Thumb image" id="thumbimage" style="display: none" />
                            <a class="removeimg" href="javascript:"></a>
                        </div>
                        <div id="boxchoice">
                            <a href="javascript:" class="Choicefile"><i class="fas fa-cloud-upload-alt"></i> Chọn ảnh</a>
                            <p style="clear:both"></p>
                        </div>

                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label">Mô tả sản phẩm</label>
                        <textarea class="form-control" type="text" asp-for="Title"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-cancel" href="table-data-product.html">Hủy bỏ</a>
                </form>
            </div>
        </div>
    </div>
</div>