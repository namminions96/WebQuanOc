        <div class=master-wrapper-page>
            <div class=header>
                <div class=header-upper>
                    <div class=header-selectors-wrapper>
                        <div class=language-selector>
                            <select id=customerlanguage name=customerlanguage onchange=setLocation(this.value) aria-label="Languages selector">
                                <option selected value="">Tiếng Việt</option>
                                <option value="">English</option>
                            </select>
                        </div>
                        <div class=language-selector>
                            <select data-val=true data-val-required="The SelectedStoreId field is required." id=SelectedStoreId name=SelectedStoreId onchange=changeStore(this.value)>
                                <option selected value=1>Miền Bắc</option>
                                <option value=2>Miền Nam </option>
                            </select>
                        </div>
                    </div>
                    <div class=header-links-wrapper>
                        <div class=header-links>
                            <ul>
                                <li>
                                    <a href="" class=ico-register>Đăng ký</a>
                                <li>
                                    <a href="" class=ico-login>Chào : @ViewBag.Name</a>
                                <li>
                                    <a href="" class=ico-wishlist>
                                        <span class=wishlist-label>Danh sách yêu thích</span>
                                        <span class=wishlist-qty>(0)</span>
                                    </a>
                                <li id=topcartlink>
                                    <a asp-action="Details" asp-controller="Product" class=ico-cart>
                                        <span class=cart-label>Giỏ hàng</span>
                                        <span class=cart-qty>(0)</span>
                                    </a>
                            </ul>
                        </div>
                        <div id=flyout-cart class=flyout-cart>
                            <div class=mini-shopping-cart>
                                <div class=count>
                                    Có <a href="">0 mục</a>
                                    trong giỏ hàng của bạn.
                                </div>
                                <div class=totals>
                                    Thành tiền: <strong></strong>
                                </div>
                                <div class=buttons>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class=header-lower>
                <div class=header-logo>
                    <a href="">
                        <img alt="Quán Cô Huyền" src="~/img/shopping-cart/food.png">
                    </a>
                </div>
                <div class="search-box store-search-box">
                    <form method=get id=small-search-box-form action=/search>
                        <input type=text class=search-box-text id=small-searchterms autocomplete=off name=q placeholder="Tìm kiếm sản phẩm" aria-label="Tìm kiếm sản phẩm">
                        <input type=submit class="button-1 search-box-button" value="Tìm kiếm">
                    </form>
                </div>
            </div>
        </div>
        <div class=header-menu>
            <ul class="top-menu notmobile">
                <li>
                    <a href="">Trang chủ</a>
                <li>
                    <a href="">Ốc </a>
                <li>
                    <a href="">Nem </a>
                <li>
                    <a href="">Nước Ép</a>
                    <div class=sublist-toggle></div>
            </ul>
            <div class=menu-toggle>Thực đơn</div>
            <ul class="top-menu mobile">
                <li>
                    <a href="">Trang chủ</a>
                <li>
                    <a href="">Ốc </a>
                <li>
                    <a href="">Nem </a>
                <li>
                    <a href="">Nước Ép</a>
            </ul>
        </div>
        <div class=master-wrapper-content>
            <div class=master-column-wrapper>
                <div class=center-1>
                    <div class="page home-page">
                        <div class=page-body>
                            <div class="slider-wrapper theme-custom">
                                <div id=nivo-slider class=nivoSlider>
                                    <a href="" aria-label="">
                                        <img src="~/images/banner/banner1.png" data-thumb="./images/banner/banner1.png" data-transition="" alt="">
                                    </a>
                                    <a href="" aria-label="">
                                        <img src="~/images/banner/banner2.png" data-thumb="./images/banner/banner2.png" data-transition="" alt="">
                                    </a>
                                    <a href="" aria-label="">
                                        <img src="~/images/banner/banner3.png" data-thumb="./images/banner/banner3.png" data-transition=slideInLeft alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="product-grid home-page-product-grid">
                                <div class=title>
                                    <strong>Sản phẩm đang mở bán</strong>
                                </div>
                                <div class=item-grid>
                                    @foreach (var item in Model)
                                    {
                                        <div class="item-box">
                                            <div class="product-item" data-productid="@item.Id">
                                                <div class=picture>
                                                    <a href="" title="">
                                                        <img alt="@item.Tensp" src="~/images/@item.images" title="">
                                                    </a>
                                                </div>
                                                <div class="details">
                                                    <h2 class="product-title">
                                                        <a href="" title="">@item.Tensp</a>
                                                    </h2>
                                                    <div class="description">Đơn vị tính: @item.Dvt</div>
                                                    <div class="add-info">
                                                        <div class="prices">
                                                            <span class="price actual-price">&#x20AB; @item.Price</span>
                                                        </div>
                                                        <div class="buttons">
                                                            <input type="button" value="Thêm vào giỏ" class="button-2 product-box-add-to-cart-button" onclick="addToCart(@item.Id,'@item.Tensp',@item.Price,1)">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
