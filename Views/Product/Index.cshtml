<script>
    function addToCart(id, name, price, quantity) {
            var data = {
            id: id,
            name: name,
            price: price,
            quantity: quantity
            };
        $.post("/Product/OnPostAddToCart", data, function (response) {
                alert(response.message);
            });
        }
    </script>
<script>
    // Hàm xử lý khi di chuột qua
    function showCartInfo() {
        var cartInfoDiv = document.getElementById("cartInfo");
        var gioHangData = @Html.Raw(Json.Serialize(ViewData["GioHang"]));

        // Tạo biến để lưu trữ nội dung thông tin giỏ hàng
        var cartInfoContent = "<h2>Giỏ hàng</h2>";

        if (gioHangData && gioHangData.length > 0) {
            for (var i = 0; i < gioHangData.length; i++) {
                var product = gioHangData[i];
                cartInfoContent += "<p>" + product.Name + " - Giá: " + product.Price + " - Số lượng: " + product.Quantity + "</p>";
            }
        } else {
            cartInfoContent += "<p>Giỏ hàng trống.</p>";
        }

        cartInfoDiv.innerHTML = cartInfoContent;
        cartInfoDiv.style.display = "block";
    }

    // Hàm xử lý khi di chuột ra ngoài
    function hideCartInfo() {
        var cartInfoDiv = document.getElementById("cartInfo");
        cartInfoDiv.style.display = "none";
    }
</script>